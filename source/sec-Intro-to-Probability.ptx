<exercise>
    <statement>
        <p>
            Which of the following is the formula used to calculate <m>P(A|B)</m>?
        </p>
    </statement>
    <choices>
        <choice correct="yes">
            <statement>
                <p>
                    <m>\frac{P(A\cap B)}{P(B)}</m>
                </p>
            </statement>
        </choice>
        <choice>
            <statement>
                <p>
                    <m>\frac{P(A\cap B)}{P(A)}</m>
                </p>
            </statement>
        </choice>
        <choice>
            <statement>
                <p>
                    <m>\frac{P(A\cup B)}{P(A)}</m>
                </p>
            </statement>
        </choice>
        <choice>
            <statement>
                <p>
                    <m>\frac{P(A\cup B)}{P(B)}</m>
                </p>
            </statement>
        </choice>
    
    </choices>

